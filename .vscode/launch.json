{
    // Используйте IntelliSense, чтобы узнать о возможных атрибутах отладки Node.js.
    // Наведите указатель мыши, чтобы просмотреть описания существующих атрибутов.
    // Для получения дополнительной информации посетите: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "CRUD",
            "env": {
                "NODE_ENV":"dev"
            },
            "program": "${workspaceRoot}/node_modules/mocha/bin/_mocha",
            "args": [
                "-u",
                "tdd",
                "--timeout",
                "999999",
                "--colors",
                "${workspaceRoot}/src/js/backend/tests/crud.js"
            ],
            "internalConsoleOptions": "openOnSessionStart"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "VK",
            "env": {
                "NODE_ENV":"dev"
            },
            "program": "${workspaceRoot}/node_modules/mocha/bin/_mocha",
            "args": [
                "-u",
                "tdd",
                "--timeout",
                "999999",
                "--colors",
                "${workspaceRoot}/src/js/backend/tests/vk.js"
            ],
            "internalConsoleOptions": "openOnSessionStart"
        },
        {
            "type": "chrome",
            "request": "launch",
            "name": "Launch Chrome",
            "url": "http://localhost:8090",
            "webRoot": "${workspaceRoot}/src/js/frontend"
        },
        {
            "type": "node",
            "request": "launch",
            "env": {
                "NODE_ENV":"dev"
            },
            "name": "Launch Program",
            "program": "${workspaceRoot}/app.js"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "dev",
            "env": {
                "NODE_ENV":"dev"
            },
            "program": "${workspaceRoot}/src/js/backend/database/init.js"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Запустить программу",
            "program": "${file}"
        }
    ]
}